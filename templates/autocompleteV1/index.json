    ],
    "groups": [
        {
            "id": "sourceInput",
            "name": "Source Input Field"
        },
        {
            "id": "dataset1",
            "name": "Products (Dataset 1)"
        },
        {
            "id": "dataset2",
            "name": "Categories or Brands (Dataset 2)"
        },
        {
            "id": "dropdownPosition",
            "name": "Dropdown Position & Width"
        },
        {
            "id": "options",
            "name": "Autocomplete Options"
        },
        {
            "id": "design",
            "name": "Design & CSS Styles"
        }
    ],
    "template": "Note: this will be replaced by content of template.html",
    "minScenariosCount": 0
}
