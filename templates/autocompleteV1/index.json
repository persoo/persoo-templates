        },

        {
            "id": "section_customCSS",
            "name": "Custom CSS",
            "group": "design",
            "type": "section"
        },
        {
            "id": "customCSS",
            "name": "Custom CSS",
            "group": "design",
            "type": "css",
            "defaultValue": "/* your own css rules, i.e\n.persoo-autocompleteDataset__hits__hit__img {\n    display: none;\n}\n*/"
        },
        {
            "id": "section_customJS",
