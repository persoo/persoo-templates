        },
        {
            "id": "dataset1HeadlineBackgroundColor",
            "name": "Headline Background Color",
            "group": "design",
            "type": "color",
            "defaultValue": "#f0f0f0",
            "condition": {
                "fieldID": "customCSSOnly",
                "operator": "!=",
                "fieldValue": true
            }
        },
        {
            "id": "dataset1HeadlineTextColor",
            "name": "Headline Text Color",
            "group": "design",
            "type": "color",
            "defaultValue": "#333",
            "condition": {
                "fieldID": "customCSSOnly",
                "operator": "!=",
                "fieldValue": true
            }
        },

        {
            "id": "section_colors_dataset2",
            "name": "Colors for Categories Dataset",
            "group": "design",
            "type": "section",
            "condition": {
                "fieldID": "customCSSOnly",
                "operator": "!=",
                "fieldValue": true
            }
        },
        {
            "id": "dataset2BackgroundColor",
            "name": "Background Color",
            "group": "design",
            "type": "color",
            "defaultValue": "#224162",
            "condition": {
                "fieldID": "customCSSOnly",
                "operator": "!=",
                "fieldValue": true
            }
        },
        {
            "id": "dataset2TextColor",
            "name": "Text Color",
            "group": "design",
            "type": "color",
            "defaultValue": "#fff",
            "condition": {
                "fieldID": "customCSSOnly",
                "operator": "!=",
                "fieldValue": true
            }
        },
        {
            "id": "dataset2HighlightTextColor",
            "name": "Highlighted Text Color",
            "group": "design",
            "type": "color",
            "defaultValue": "#ddd",
            "condition": {
                "fieldID": "customCSSOnly",
                "operator": "!=",
                "fieldValue": true
            }
        },
        {
            "id": "dataset2SelectedBackgroundColor",
            "name": "Selected Item Background Color",
            "group": "design",
            "type": "color",
            "defaultValue": "#498fdb",
            "condition": {
                "fieldID": "customCSSOnly",
                "operator": "!=",
                "fieldValue": true
            }
        },
        {
            "id": "dataset2HeadlineBackgroundColor",
            "name": "Headline Background Color",
