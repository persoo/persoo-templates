{
    "class": "webWidget",
    "isActive": true,
    "name": "Info bar",
    "fields": [

        {
            "id": "section_position",
            "name": "Position",
            "group": "design",
            "type": "section"
        },
        {
            "group": "design",
            "id": "position",
            "name": "Position",
            "options": [
                {
                    "label": "top",
                    "value": "top"
                },
                {
                    "label": "bottom",
                    "value": "bottom"
                },
                {
                    "label": "in location",
                    "value": "inLocation"
                }
            ],
            "type": "select",
            "defaultValue": "top"
        },

        {
            "id": "section_closing",
            "name": "Closing",
            "group": "design",
            "type": "section"
        },
        {
            "id": "showClosingX",
            "name": "Show closing X",
            "group": "design",
            "type": "checkbox",
            "defaultValue": true
        },
        {
            "id": "closeXColor",
            "name": "Close X Color",
            "group": "design",
            "type": "color",
            "defaultValue": "#777",
            "condition": {
                "operator": "==",
                "fieldID": "showClosingX",
                "fieldValue": true
            }
        },

        {
            "id": "section_size",
            "name": "Size",
            "group": "design",
            "type": "section"
        },
        {
            "id": "autoHeight",
            "name": "Auto Height",
            "group": "design",
            "type": "checkbox",
            "defaultValue": true
        },
        {
            "id": "customHeight",
            "name": "Custom Height",
            "group": "design",
            "type": "number",
            "defaultValue": 50,
            "condition": {
                "operator": "==",
                "fieldID": "autoHeight",
                "fieldValue": false
            }
        },

        {
            "id": "section_texts",
            "name": "Texts",
            "group": "design",
            "type": "section"
        },
        {
            "id": "textColor",
            "name": "Text Color",
            "group": "design",
            "type": "color",
            "defaultValue": "rgba(255, 253, 253, 0.81)"
        },
        {
            "id": "textFont",
            "name": "Text Font",
            "group": "design",
            "type": "text",
            "defaultValue": "normal normal 300 medium Arial, Helvetica, sans-serif"
        },

        {
            "id": "section_background",
            "name": "Background",
            "group": "design",
            "type": "section"
        },
        {
            "id": "backgroundColor",
            "name": "Background Color",
            "group": "design",
            "type": "color",
            "defaultValue": "#c00"
        },
        {
            "id": "backgroundImageLink",
            "name": "Background Image Link",
            "group": "design",
            "type": "text",
            "defaultValue": ""
        },
        {
            "group": "design",
            "id": "backgroundImagePosition",
            "name": "Background Image Position",
            "options": [
                {
                    "label": "fill container",
                    "value": "fillContainer"
                },
                {
                    "label": "centered in container",
                    "value": "centeredInContainer"
                }
            ],
            "type": "select",
            "defaultValue": "fillContainer",
            "condition": {
                "operator": "!=",
                "fieldID": "backgroundImageLink",
                "fieldValue": ""
            }
        },

        {
            "id": "section_border",
            "name": "Border",
            "group": "design",
            "type": "section"
        },
        {
            "id": "borderSize",
            "name": "Border size",
            "group": "design",
            "type": "number",
            "defaultValue": 1
        },
        {
            "id": "borderColor",
            "name": "Border Color",
            "group": "design",
            "type": "color",
            "defaultValue": "#ffffff"
        },
        {
            "id": "boxCorners",
            "name": "Box Corners",
            "group": "design",
            "type": "select",
            "options": [
                {
                    "label": "Rectangular",
                    "value": "0"
                },
                {
                    "label": "Mini Rounded",
                    "value": "5"
                },
                {
                    "label": "Rounded",
                    "value": "15"
                }
            ],
            "defaultValue": "0"
        },
        {
            "id": "boxShadow",
            "name": "Box Shadow",
            "group": "design",
            "type": "select",
            "options": [
                {
                    "label": "None",
                    "value": "none"
                },
                {
                    "label": "Low",
                    "value": "low"
                },
                {
                    "label": "High",
                    "value": "high"
                }
            ],
            "defaultValue": "none"
        },
        {
            "id": "boxShadowColor",
            "name": "Box Shadow Color",
            "group": "design",
            "type": "color",
            "defaultValue": "#666666"
        },

        @@include templateParts/innerContentBlock/fields.json

        {
            "id": "section_customCSS",
            "name": "Custom CSS",
            "group": "design",
            "type": "section"
        },
        {
            "id": "customCSS",
            "name": "Custom CSS",
            "group": "design",
            "type": "css",
            "defaultValue": "/* your own css rules */"
        },

        {
            "id": "section_customJS",
            "name": "Custom Javascript",
            "group": "design",
            "type": "section"
        },
        {
            "id": "customJS",
            "name": "Custom Javascript",
            "group": "design",
            "type": "javascript",
            "defaultValue": "/* your own javascript */"
        }
    ],
    "groups": [

        @@include templateParts/innerContentBlock/groups.json

        {
            "id": "design",
            "name": "Design"
        }
    ],
    "minScenariosCount": 0,
    "template": "Note: this will be replaced by content of template.html"
}
