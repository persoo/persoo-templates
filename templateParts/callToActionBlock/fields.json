{
    "id": "ctaActionType",
    "name": "Call to Action Type",
    "group": "cta",
    "type": "select",
    "options": [
        {
            "label": "Show button",
            "value": "button"
        },
        {
            "label": "Use background image",
            "value": "background"
        }
    ],
    "defaultValue": "button",
    "condition": {
        "fieldID": "innerContentType",
        "operator": "match",
        "fieldValue": "CTA"
    }
},
{
    "id": "ctaButtonLabel",
    "name": "Button Text",
    "group": "cta",
    "type": "text",
    "defaultValue": "SHOW ME",
    "condition": {
        "fieldID": "innerContentType",
        "operator": "match",
        "fieldValue": "CTA"
    }
},
{
    "id": "ctaAction",
    "name": "Action",
    "group": "cta",
    "type": "select",
    "options": [
        {
            "label": "Redirect to link",
            "value": "redirect"
        },
        {
            "label": "Close offer",
            "value": "close"
        }
    ],
    "defaultValue": "redirect",
    "condition": {
        "fieldID": "innerContentType",
        "operator": "match",
        "fieldValue": "CTA"
    }
},
{
    "id": "ctaButtonLink",
    "name": "Button Target Link",
    "group": "cta",
    "type": "text",
    "defaultValue": "/your/target/page",
    "condition": {
        "fieldID": "innerContentType",
        "operator": "match",
        "fieldValue": "CTA"
    }
},