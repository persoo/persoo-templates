{
    "id": "ctaActionType",
    "name": "Action triggered by click on ",
    "group": "cta",
    "type": "select",
    "options": [
        {
            "label": "Button",
            "value": "button"
        },
        {
            "label": "Whole content box",
            "value": "background"
        }
    ],
    "defaultValue": "button",
    "condition": {
        "fieldID": "innerContentType",
        "operator": "match",
        "fieldValue": "CTA"
    }
},
{
    "id": "ctaButtonLabel",
    "name": "Button Text",
    "group": "cta",
    "type": "text",
    "defaultValue": "SHOW&nbsp;ME",
    "condition": {
        "fieldID": "innerContentType",
        "operator": "match",
        "fieldValue": "CTA"
    }
},
{
    "id": "ctaAction",
    "name": "Action",
    "group": "cta",
    "type": "select",
    "options": [
        {
            "label": "Open target link",
            "value": "redirect"
        },
        {
            "label": "Show coupon",
            "value": "coupon"
        },
        {
            "label": "Close offer",
            "value": "close"
        }
    ],
    "defaultValue": "redirect",
    "condition": {
        "fieldID": "innerContentType",
        "operator": "match",
        "fieldValue": "CTA"
    }
},
{
    "id": "ctaButtonCoupon",
    "name": "Coupon or text",
    "group": "cta",
    "type": "text",
    "defaultValue": "Your coupon is AX1Y2A45",
    "condition": {
        "fieldID": "innerContentType",
        "operator": "match",
        "fieldValue": "CTA"
    }
},
{
    "id": "ctaButtonLink",
    "name": "Button Target Link",
    "group": "cta",
    "type": "text",
    "defaultValue": "/your/target/page",
    "condition": {
        "fieldID": "innerContentType",
        "operator": "match",
        "fieldValue": "CTA"
    }
},
